<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dao.WebLinkMapperDao">

	<resultMap id="webLink" type="WebLink">
		
		<result property="webLinkId" column="webLinkId" />
		
		<result property="name" column="name" />
		
		<result property="link" column="link" />
		
		<result property="webLinktypeId" column="webLinktypeId" />
		
		<result property="bgUserId" column="bgUserId" />
		
		<result property="hit" column="hit" />
		
	</resultMap>

	<select id="selectWebLink" resultType="java.util.Map" resultMap="webLink">
		select * from web_link where webLinkId = #{webLinkId}
	</select>
	
	<select id="selectListWebLink"  resultType="java.util.List" resultMap="webLink">
		select * from web_link where 1 = 1<if test="webLinkId != null"> and webLinkId = #{webLinkId}</if><if test="name != null"> and name = '#{name}'</if><if test="link != null"> and link = '#{link}'</if><if test="webLinktypeId != null"> and webLinktypeId = #{webLinktypeId}</if><if test="bgUserId != null"> and bgUserId = #{bgUserId}</if><if test="hit != null"> and hit = #{hit}</if> limit #{startPage},#{page}
	</select>
	
	<select id="selectCountWebLink"  resultType="java.lang.Integer" >
		select count(webLinkId) from web_link where 1 = 1 <if test="webLinkId != null"> and webLinkId = #{webLinkId}</if><if test="name != null"> and name = '#{name}'</if><if test="link != null"> and link = '#{link}'</if><if test="webLinktypeId != null"> and webLinktypeId = #{webLinktypeId}</if><if test="bgUserId != null"> and bgUserId = #{bgUserId}</if><if test="hit != null"> and hit = #{hit}</if> 
	</select>
	
	<insert id="insertWebLink" parameterType="WebLink">
		insert into web_link (webLinkId,name,link,webLinktypeId,bgUserId,hit) values (#{webLinkId},#{name},#{link},#{webLinktypeId},#{bgUserId},#{hit})
	</insert>
	
	<update id="updateWebLink" parameterType="WebLink">
		update web_link set <if test="webLinkId != null">webLinkId = #{webLinkId},</if><if test="name != null">name = #{name},</if><if test="link != null">link = #{link},</if><if test="webLinktypeId != null">webLinktypeId = #{webLinktypeId},</if><if test="bgUserId != null">bgUserId = #{bgUserId},</if><if test="hit != null">hit = #{hit},</if>webLinkId = #{webLinkId} where webLinkId = #{webLinkId}
	</update>
	
	<delete id="deleteByIdsWebLink" parameterType="WebLink">
		delete from web_link where webLinkId in (#{ids})
	</delete>

	<select id="maxIdWebLink" resultType="java.lang.Integer">
		select max(webLinkId) from web_link		
	</select>
	
</mapper>