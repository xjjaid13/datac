<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dao.WebLinktypeMapperDao">

	<resultMap id="webLinktype" type="WebLinktype">
		
		<id property="webLinktypeId" column="webLinktypeId" />
		
		<result property="name" column="name" />
		
		<result property="bgUserId" column="bgUserId" />
		
		<collection property="webLinkList" ofType="WebLink">
		
			<id property="webLinkId" column="webLinkId" />
		
			<result property="name" column="name1" />
			
			<result property="link" column="link" />
			
			<result property="bgUserId" column="bgUserId" />
		
			<result property="hit" column="hit" />
			
		</collection>
		
	</resultMap>

	<select id="selectWebLinktype" resultType="java.util.Map" resultMap="webLinktype">
		select * from web_linktype where webLinktypeId = #{webLinktypeId}
	</select>
	
	<select id="returnEntityList" resultType="java.util.Map" resultMap="webLinktype">
		select *,b.name as name1 from web_linktype a LEFT JOIN web_link b ON a.webLinktypeId = b.webLinktypeId WHERE 1 = 1 <if test="bgUserId != null"> and a.bgUserId = #{bgUserId}</if>
	</select>
	
	<select id="selectListWebLinktype"  resultType="java.util.List" resultMap="webLinktype">
		select * from web_linktype where 1 = 1<if test="webLinktypeId != null"> and webLinktypeId = #{webLinktypeId}</if><if test="bgUserId != null"> and bgUserId = #{bgUserId}</if><if test="name != null"> and name = '#{name}'</if> limit #{startPage},#{page}
	</select>
	
	<select id="selectCountWebLinktype"  resultType="java.lang.Integer" >
		select count(webLinktypeId) from web_linktype where 1 = 1 <if test="webLinktypeId != null"> and webLinktypeId = #{webLinktypeId}</if><if test="bgUserId != null"> and bgUserId = #{bgUserId}</if><if test="name != null"> and name = '#{name}'</if> 
	</select>
	
	<insert id="insertWebLinktype" parameterType="WebLinktype">
		insert into web_linktype (webLinktypeId,name,bgUserId) values (#{webLinktypeId},#{name},#{bgUserId})
	</insert>
	
	<update id="updateWebLinktype" parameterType="WebLinktype">
		update web_linktype set <if test="webLinktypeId != null">webLinktypeId = #{webLinktypeId},</if><if test="bgUserId != null">bgUserId = #{bgUserId},</if><if test="name != null">name = #{name},</if>webLinktypeId = #{webLinktypeId} where webLinktypeId = #{webLinktypeId}
	</update>
	
	<delete id="deleteByIdsWebLinktype" parameterType="WebLinktype">
		delete from web_linktype where webLinktypeId in (#{ids})
	</delete>

	<select id="maxIdWebLinktype" resultType="java.lang.Integer">
		select max(webLinktypeId) from web_linktype		
	</select>
	
</mapper>